<% provide(:title, @title) %>
<div class="row">
    <aside class="col-md-4">
        <section class="user_info">
            <h1>
                <%= gravatar_for @user %>
                <%= @user.name %>
            </h1>
        </section>
    </aside>
    <div class="col-md-8">
        <h3><%= @title %></h3>
        <% if @users.any? %>
            <section>
                <% @users.each do |user| %>
                    <ul class="users clearfix">
                        <%= gravatar_for user %>
                        <%= link_to user.name, user %>
                    </ul>
                <% end %>
            </section>
        <% end %>
    </div>
</div>
 